@model PandaApp.Models.MediaAndSubtitles

@{
    ViewBag.Title = "MediaProfile";
}

<h2>MediaProfile</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Language</th>
            <th>Date Created</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model.subs)
            {
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Language
                </td>
                <td>
                    @item.DateCreated
                </td>
            }
        </tr>
            
    </tbody>


</table>
