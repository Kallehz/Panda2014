@model PandaApp.Models.Subtitle

@{
    ViewBag.Title = "Upload";
}

@using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Subtitle upload</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Language, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="select" name="language">
                    <option value="Icelandic">Icelandic</option>
                    <option value="English">English</option>
                    <option value="Danish">Danish</option>
                    <option value="Spanish">Spanish</option>
                    <option value="Swedish">Swedish</option>
                    <option value="Klingon">Klingon</option>
                    <option value="Hungarian">Hungarian</option>
                </select>
                @Html.ValidationMessageFor(model => model.Language)
            </div>
        </div>

        <!-- New upload field starts -->
        <!-- TODO send file somewhere! -->
        <!-- TODO: Have this form required -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <form id="Form1" method="post" enctype="multipart/form-data"  >
                    <input type=file id=file name=file required />
                    <br>

                    <input type="submit" id="Submit1" value="Upload" class="btn btn-default" />
                </form>
                </div>
            </div>
        <!-- new upload field ends-->

    </div>
}
