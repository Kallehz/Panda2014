@model IEnumerable<PandaApp.Models.Request>

@{
    ViewBag.Title = "Requests";
}

<!-- Search-->
<div class="row text-center">
    @using (Html.BeginForm("SearchResult", "Subtitle"))
    {
        <input type="text" class="form-control" id="input" name="title" size="21" maxlength="120" placeholder="Request search">
        <select class="form-control" id="select" name="language">
            <option value="all" selected>Language</option>
            <option value="icelandic">Icelandic</option>
            <option value="english">English</option>
            <option value="danish">Danish</option>
            <option value="spanish">Spanish</option>
            <option value="swedish">Swedish</option>
            <option value="klingon">Klingon</option>
            <option value="hungarian">Hungarian</option>
        </select>
        <input type="submit" class="btn btn" value="Search">
    }
</div>
<!-- search end-->

<div class="row">
    <div class="col-md-7 col-md-offset-2">
        <h3>View Requests</h3>
        <table class="table-striped" width="647">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Language</th>
                    <th>Author</th>
                    <th>Upvotes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Language
                        </td>
                        <td>
                            @item.Author
                        </td>
                        <td>
                            @item.Upvotes
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@Html.ActionLink("Create Request", "NewRequest", null, new { @class = "btn btn-default" })