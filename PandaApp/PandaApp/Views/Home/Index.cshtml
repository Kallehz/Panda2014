@model IEnumerable<PandaApp.Models.Request>
@{
    ViewBag.Title = "Home Page";
}
 <!-- TODO! some search action-->

<!-- Search-->
<div>
    <form class="row text-center" method="get" action="http://www.google.com">
        <input type="text" class="form-control" id="input" name="q" size="21" maxlength="120" placeholder="Subtitle search">
        
        <select class="form-control" id="select" name="language">
            <option value="all" selected>Language</option>
            <option value="is">Icelandic</option>
            <option value="en">English</option>
        </select>

        <input type="submit" class="btn btn-primary" value="Search">
    </form>
</div>

<!-- search end-->

<div class="row">
    <!-- div to the left -->
    <div class="col-xs-6">
        <h3>Recently added</h3>
       
        <table class="table table-striped" width="647">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Language</th>
                    <th>Submitted by</th>
                </tr>
            </thead>
            <tbody>  <!-- TODO! some voodoo to get info from nonexisting database-->
                <tr>
                    <td>1</td>
                    <td>Game of thrones S04E04</td>
                    <td>Icelandic</td>
                    <td>thomas@yahoo.com</td>
                </tr>
            </tbody>
        </table>
    </div>
    <!--Div to the left ends-->
    <!-- div to the right -->
    <table class="table-striped" width="647">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>LanguageID</th>
                <th>Upvotes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.MediaID
                    </td>
                    <td>
                        @item.LanguageID
                    </td>
                    <td>
                        @item.Upvotes
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!--div to the right ends-->
</div>