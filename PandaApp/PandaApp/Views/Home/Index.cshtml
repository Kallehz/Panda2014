@model PandaApp.Models.SubAndReq
@{
    ViewBag.Title = "Home Page";
}
<!-- TODO! some search action-->
<!-- Search-->
<div>
    <form class="row text-center" method="get" action="http://www.google.com">
        <input type="text" class="form-control" id="input" name="q" size="21" maxlength="120" placeholder="Subtitle search">

        <select class="form-control" id="select" name="language">
            <option value="all" selected>Language</option>
            <option value="is">Icelandic</option>
            <option value="en">English</option>
        </select>

        <input type="submit" class="btn btn-primary" value="Search">
    </form>
</div>
<!-- search end-->

<div class="row">
    <!-- div to the left -->
    <div class="col-md-6">
        <h3>Recently Added</h3>
        <table class="table-striped" width="450">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Language</th>
                    <th>Added</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var sub in Model.Subtitles)
                {
                    <tr>
                        <td>
                            @sub.ID
                            @*SUBTITLE ID*@
                        </td>
                        <td>
                            @sub.MediaID
                            @*MEDIA ID*@
                        </td>
                        <td>
                            @sub.LanguageID
                            @*SUBTITLE LANGUAGE ID*@
                        </td>
                        <td>
                            @sub.DateCreated
                            @*SUBTITLE DATECREATED*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!--Div to the left ends-->
    <!-- div to the right -->
    <div class="col-md-6">
        <h3>Most Upvoted Requests</h3>
        <table class="table-striped" width="450">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Language</th>
                    <th>Upvotes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var req in Model.Requests)
                {
                    <tr>
                        <td>
                            @*REQUEST ID*@
                            @req.ID
                        </td>
                        <td>
                            @*MEDIA ID*@
                            @req.MediaID
                        </td>
                        <td>
                            @*REQUEST LANGUAGE ID*@
                            @req.LanguageID
                        </td>
                        <td>
                            @*UPVOTES OF REQUEST*@
                            @req.Upvotes
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!--div to the right ends-->
</div>