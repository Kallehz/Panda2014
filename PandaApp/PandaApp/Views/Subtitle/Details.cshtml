@model PandaApp.Models.Subtitle

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Subtitle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.ActionLink(Model.Title, "MediaProfile", "Media", new { id = Model.MediaID }, null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

    </dl>
</div>

@Html.ActionLink("Edit", "Edit", new { subtitleId = Model.ID }, new { @class = "btn btn-default" })
@Html.ActionLink("Download", "Download", new { subtitleId = Model.ID }, new { @class = "btn btn-default" })

<hr />

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("PostComment", "Subtitle", new { subtitleId = @Model.ID }))
    {
        @Html.AntiForgeryToken()
        <div class="row col-md-offset-2">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Comments, new { @class = "control-label" })
                <div>
                    @Html.TextArea("Comment", new { @class = "form-control", @rows = 4, @cols = 20 })
                    @Html.ValidationMessageFor(model => model.Comments)
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}



@foreach (var item in Model.Comments)
{
    <dl class="dl-horizontal">
        <dt>
            @item.Author
        </dt>
        <dd>
            @item.Text
        </dd>
    </dl>
}

<p>
    @Html.ActionLink("Back to List", "Index", "Home")
</p>
