@model PandaApp.Models.SubAndReq
@{
    ViewBag.Title = "Search Results";
}

<h2>SearchResult</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Subtitles found</h3>
        <table class="table-striped" width="450">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Language</th>
                    <th>Author</th>
                    <th>Date Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sub in Model.Subtitles)
                {
                    <tr>
                        <td>
                            @sub.Title
                        </td>
                        <td>
                            @sub.Language
                        </td>
                        <td>
                            @sub.Author
                        </td>
                        <td>
                            @sub.DateCreated.ToShortDateString()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h3>Requests found</h3>
        <table class="table-striped" width="450">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Language</th>
                    <th>Author</th>
                    <th>Date Created</th>
                    <th>Upvotes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var req in Model.Requests)
                {
                    <tr>
                        <td>
                            @req.Title
                        </td>
                        <td>
                            @req.Language
                        </td>
                        <td>
                            @req.Author
                        </td>
                        <td>
                            @req.DateCreated.ToShortDateString()
                        </td>
                        <td>
                            @req.Upvotes
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>