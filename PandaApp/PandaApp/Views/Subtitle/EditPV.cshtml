@model PandaApp.Models.SubtitleLine

@{
    ViewBag.Title = "EditPV";
}
@using (Html.BeginForm("UpdateSubtitleLine", "Subtitle", FormMethod.Post, new { @class = "form-horizontal", name = "line_" + @Model.Index, role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <input type="hidden" class="lineID" value="@Model.ID" />   
    
    <div class="form-group">
        <label class="col-md-2 control-label">Line @Model.Index</label>
        <div class="col-md-10">
            <input class="form-control" name = "lineText" data-val="true" data-val-required="The Text field is required." type="text" value="@Model.Text" />
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label">Start</label>
        <div class="col-md-10">
            <input class="form-control" name = "lineStart" data-val="true" data-val-required="The TimeFrom field is required." type="text" value="@Model.TimeFrom" />
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label">Stop</label>
        <div class="col-md-10">
            <input class="form-control" name = "lineStop" data-val="true" data-val-required="The TimeTo field is required." type="text" value="@Model.TimeTo" />
        </div>
    </div>
    
    <div class="form-group submit_div">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" value="Save" class="form_submit btn btn-default" />
            <p class="edit_msg" hidden>Your changes have been saved</p>
        </div>
    </div>
}