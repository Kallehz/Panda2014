@model PandaApp.Models.SubtitleLine

@{
    ViewBag.Title = "EditPV";
}
@using (Html.BeginForm("UpdateSubtitleLine", "Subtitle", FormMethod.Post, new { @class = "form-horizontal", @id = Model.ID, role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.LabelFor(m => m.Text, new { @id = "text" })
    <input type="hidden" id="ID" name="ID" value="@Model.ID" />
    @Html.TextBoxFor(m => m.Text)
    @Html.ValidationMessageFor(m => m.Text)
    <input type="submit" value="Edit" id="form_submit" />
}